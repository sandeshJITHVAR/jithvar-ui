{
  "name": "jithvar-ui",
  "version": "1.0.4",
  "description": "Professional React component library with 34 production-ready components including 20 interactive charts, advanced form inputs, data tables, and enterprise-grade UI tools. Built with TypeScript for Next.js and React applications. Supports React 17, 18, and 19.",
  "main": "dist/index.js",
  "module": "dist/index.esm.js",
  "types": "dist/index.d.ts",
  "sideEffects": [
    "**/*.css"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.esm.js",
      "require": "./dist/index.js"
    },
    "./package.json": "./package.json"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "rollup -c",
    "dev": "rollup -c -w",
    "test": "echo \"Error: no test specified\" && exit 1",
    "demo": "vite demo",
    "build:demo": "vite build demo"
  },
  "keywords": [
    "react",
    "react-components",
    "nextjs",
    "next-js",
    "ui",
    "ui-components",
    "component-library",
    "typescript",
    "charts",
    "data-visualization",
    "bar-chart",
    "line-chart",
    "pie-chart",
    "date-picker",
    "date-range-picker",
    "searchable-select",
    "dropdown",
    "data-table",
    "pagination",
    "range-slider",
    "forms",
    "inputs",
    "checkbox",
    "radio",
    "tabs",
    "collapse",
    "accordion",
    "alerts",
    "notifications",
    "modal",
    "heatmap",
    "gantt-chart",
    "funnel-chart",
    "radar-chart",
    "candlestick",
    "scatter-plot",
    "bubble-chart",
    "gauge-chart",
    "enterprise",
    "jithvar",
    "responsive",
    "accessible",
    "tree-shakeable"
  ],
  "author": "Jithvar Consultancy Services <contact@jithvar.com> (https://jithvar.com)",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jithvar/jithvar-ui.git"
  },
  "bugs": {
    "url": "https://github.com/jithvar/jithvar-ui/issues"
  },
  "homepage": "https://ui.jithvar.com",
  "type": "module",
  "peerDependencies": {
    "react": ">=17.0.0",
    "react-dom": ">=17.0.0"
  },
  "peerDependenciesMeta": {
    "react": {
      "optional": false
    },
    "react-dom": {
      "optional": false
    }
  },
  "engines": {
    "node": ">=14.0.0",
    "npm": ">=6.0.0"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^25.0.7",
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@rollup/plugin-typescript": "^11.1.5",
    "@types/react": "^18.2.43",
    "@types/react-dom": "^18.2.17",
    "@vitejs/plugin-react": "^4.2.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.30.1",
    "rollup": "^4.9.0",
    "rollup-plugin-peer-deps-external": "^2.2.4",
    "rollup-plugin-postcss": "^4.0.2",
    "tslib": "^2.6.2",
    "typescript": "^5.3.3",
    "vite": "^5.0.10"
  }
}
